<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipalNavegavel">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="404dp"
        android:layout_height="642dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/homeProfileWelcome"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center|left"
                android:src="@drawable/ic_profile_blank"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/homeNomeOla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:text="Olá, "
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeNomeWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="Nome"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:onClick="logout"
                android:src="@drawable/ic_logout" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Último mangá adicionado:"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/capaHomeUltimo"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_manga_blank" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tituloHomeUltimo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paginasHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número de páginas: " />

                    <TextView
                        android:id="@+id/paginasHomeUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editoraHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Editora: " />

                    <TextView
                        android:id="@+id/editoraHomeUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dataPublicacaoHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data da publicação: " />

                    <TextView
                        android:id="@+id/dataPublicacaoHomeUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/isbnHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISBN: " />

                    <TextView
                        android:id="@+id/isbnHomeUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_news"
                android:drawablePadding="5dp"
                android:text="Últimas notícias:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/noticiaAdd"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:clickable="true"
                android:onClick="novaNoticia" />
        </LinearLayout>

        <ListView
            android:id="@+id/listaNoticias"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/bibliotecaIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_biblioteca"
            android:clickable="true"
            android:onClick="verBiblioteca"
            app:tint="#A681A6" />

        <ImageView
            android:id="@+id/amigosIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_amigos"
            app:tint="#A681A6"
            android:clickable="true"
            android:onClick="verAmigos" />

        <ImageView
            android:id="@+id/lojasIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_lojas"
            app:tint="#A681A6"
            android:clickable="true"
            android:onClick="verLojas"/>

        <ImageView
            android:id="@+id/perfilIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_perfil"
            app:tint="#A681A6"
            android:clickable="true"
            android:onClick="verPerfil"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>